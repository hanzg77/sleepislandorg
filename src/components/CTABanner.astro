---
interface Props {
  lang?: 'zh-Hans' | 'en';
  variant?: 'hero' | 'mid' | 'bottom';
}
const { lang = 'zh-Hans', variant = 'bottom' } = Astro.props;
const isEn = lang === 'en';

const heading = isEn
  ? 'Get the full experience'
  : '获取完整体验';
const sub = isEn
  ? 'All sounds, auto-stop on sleep, snore detection & sleep tracking. Free download.'
  : '全部音景、入睡自动停止、鼾声检测与睡眠记录。免费下载。';
const cta = isEn ? 'Download on the App Store' : '在 App Store 免费下载';
---

<aside class={`text-center ${variant === 'hero' ? 'py-8' : 'py-12 px-4'}`}>
  {variant !== 'hero' && (
    <div class="max-w-xl mx-auto">
      <h2 class="text-2xl font-bold mb-3">{heading}</h2>
      <p class="text-[var(--color-text-secondary)] mb-6">{sub}</p>
    </div>
  )}
  <a
    href="https://apps.apple.com/app/id6747609991"
    class="inline-block bg-[var(--color-accent)] hover:bg-[var(--color-accent-hover)] text-white font-medium px-8 py-3.5 rounded-full transition-colors text-base"
  >
    {cta}
  </a>
</aside>
