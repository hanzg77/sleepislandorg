---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  lang?: 'zh-Hans' | 'en';
  canonical?: string;
  ogImage?: string;
  alternateZh?: string;
  alternateEn?: string;
  schema?: object[];
}

const {
  title,
  description,
  lang = 'zh-Hans',
  canonical,
  ogImage = '/assets/og-cover.png',
  alternateZh,
  alternateEn,
  schema = []
} = Astro.props;

const siteUrl = 'https://sleepisland.org';
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = ogImage.startsWith('http') ? ogImage : new URL(ogImage, siteUrl).href;
const isEn = lang === 'en';
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

  <title>{title}</title>
  <meta name="description" content={description} />

  <link rel="canonical" href={canonicalUrl} />
  <link rel="icon" href="/assets/favicon.ico" />

  {alternateZh && <link rel="alternate" hreflang="zh-Hans" href={alternateZh} />}
  {alternateEn && <link rel="alternate" hreflang="en" href={alternateEn} />}
  {alternateZh && <link rel="alternate" hreflang="x-default" href={alternateZh} />}

  <!-- iOS Smart App Banner -->
  <meta name="apple-itunes-app" content="app-id=6747609991" />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImageUrl} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:site_name" content="睡眠岛 Hushbay" />
  <meta property="og:locale" content={isEn ? 'en_US' : 'zh_CN'} />
  <meta property="og:locale:alternate" content={isEn ? 'zh_CN' : 'en_US'} />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />

  <!-- Schema JSON-LD -->
  {schema.map(s => (
    <script type="application/ld+json" set:html={JSON.stringify(s)} />
  ))}
</head>
<body class="min-h-screen flex flex-col">
  <Header lang={lang} />
  <main class="flex-1">
    <slot />
  </main>
  <Footer lang={lang} />
</body>
</html>
